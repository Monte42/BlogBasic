<% include ../partials/header %>

      <h1 style="text-align: center">Edit <%= blog.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/topics/<%= topic.id %>/blogs/<%= blog.id %>?_method=PUT" method="POST">
              <div class="ui label">
                <p>Title</p>
              </div>
              <div class="ui input">
                <input type="text" name="title" value="<%= blog.title %>">
              </div><br>
              <div class="ui label">
                <p>Image</p>
              </div>
              <div class="ui input">
                <input type="text" name="image" value="<%= blog.image %>">
              </div><br>
              <h6>Please use images from the web.  You can upload and image to a free sever then copy and paste the URL </h6>
              <textarea name="content" rows="10" cols="100"><%= blog.content %></textarea>
              <input type="submit" value="Submit">
            </form>
        </div>

<% include ../partials/footer %>
